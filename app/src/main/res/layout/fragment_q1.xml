<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.Q2Fragment">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_15sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:id="@+id/Q_tvScour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="@string/scour"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/FragTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_but"
            android:backgroundTint="@color/purple2">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/RadioTrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_12sdp"
                android:backgroundTint="@color/yellow"
                android:background="@drawable/correct"
                 />
        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_but"
            android:backgroundTint="@color/purple2">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/RadioFalse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/resource_false"
                />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>