<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_290sdp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.Q2Fragment">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_23ssp" />

    <TextView
        android:id="@+id/q_tvScour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="@string/scour"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ChooseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ChooseAnswer1"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_but"
                android:backgroundTint="@color/purple"
                android:padding="@dimen/_5sdp"
                android:shadowColor="@color/gold"
                android:textColor="@color/gold"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ChooseAnswer2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_but"
                android:backgroundTint="@color/purple"
                android:padding="@dimen/_5sdp"
                android:shadowColor="@color/gold"
                android:textColor="@color/gold"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ChooseAnswer4"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_but"
                android:backgroundTint="@color/purple"
                android:padding="@dimen/_5sdp"
                android:shadowColor="@color/gold"
                android:textColor="@color/gold"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ChooseAnswer3"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/background_but"
                android:backgroundTint="@color/purple"
                android:padding="@dimen/_5sdp"
                android:shadowColor="@color/gold"
                android:textColor="@color/gold"
                android:textSize="@dimen/_15sdp"  />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>